<script defer>
  let showMenu = false;

  const toogleMenu = () => {
    showMenu = !showMenu;
    if (showMenu === true) {
      document.getElementById("hamburger").style.display = "block";
    } else {
      document.getElementById("hamburger").style.display = "none";
    }
  };
</script>

<div id="header">
  <div>
    <a href="/"><h2>Home</h2></a>
  </div>
  <div>
    <a href="/profile"><h2>My Profile</h2></a>
  </div>
  <div>
    <a href="/chat_board"><h2>Chat Board</h2></a>
  </div>
  <div>
    <a href="/login"><h2>Log in</h2></a>
  </div>
  <div class="hamburger-menu">
    <svg
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 24 24"
      stroke-width="1.5"
      stroke="currentColor"
      class="hamburger-menu-image"
      onclick="toogleMenu()"
    >
      >
      <path
        stroke-linecap="round"
        stroke-linejoin="round"
        d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
      />
    </svg>
    <div id="hamburger">
      <% if (cresidentials.name) { %>
      <p><%= cresidentials.name %></p>
      <a href="/logout" class="regularButton">Log out</a>
      <% }else { %>
      <p>Your are not logged in</p>
      <a href="/login" class="regularButton">Log in</a>
      <% } %>
    </div>
      <% if (cresidentials.avatar) { %>
        <img src="https://i.pravatar.cc/50" />
      <% }else { %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
          <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
        </svg>
      <% } %>
  </div>
</div>
